<%= form_for(@record) do |f| %>
<div class="form-horizontal" role="form">
  
  <div class="form-group">
    <%= f.label :date, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
      <%= f.date_field :date, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :opponent_team, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :opponent_team, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :score, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :score, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :goal, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :goal, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :assist, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :assist, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :participation_time, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :participation_time, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :redcard, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :redcard, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :yellowcard, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :yellowcard, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :content, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
      <%= f.text_area :content, cols: 50, rows: 10, autofocus: true, class:"form-control", placeholder: "内容をご入力ください" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-7 col-sm-4">
      <div class="btn-group pull-right">
        <%= link_to '戻る', :back, class:"btn btn-warning btn-lg" %>
        <%= f.submit @record.new_record? ? '登録する' : '更新する', class:"btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>

</div>
<% end %>