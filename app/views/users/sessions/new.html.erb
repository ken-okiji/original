<h1>ログイン</h1>

<div class="form-horizontal" role="form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label 'Eメール', class:"col-sm-offset-1 col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"ご登録のEメールアドレスをご入力ください。" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'パスワード', class:"col-sm-offset-1 col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"ご登録のパスワードをご入力ください。" %>
    </div>
  </div>

  <!--<% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>-->

  <div class="form-group">
    <div class="col-sm-offset-8 col-sm-2">
    <%= f.submit 'ログイン', class:"btn btn-primary btn-lg" %>
    </div>
  </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-8 col-sm-3">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>