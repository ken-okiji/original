<h1>登録情報変更</h1>

<div class="form-horizontal" role="form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= render 'users/shared/form' %>
  
  <div class="form-group">
    <%= f.label "現在のパスワード", class:"col-sm-offset-1 col-sm-2 control-label" %>
    <div class="col-sm-7">
      <%= f.password_field :current_password, autocomplete: "off", class:"form-control", placeholder:"変更する為には現在のパスワードが必要です" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-8 col-sm-2">
      <%= f.submit '更新する', class:"btn btn-primary btn-lg pull-right" %>
    </div>
  </div>
<% end %>

<div class=”row”>
<h2>アカウント削除</h2>
  <div class="form-group text-center">
    <div class="col-sm-offset-8 col-sm-2">
      <p><%= button_to "削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger btn-lg pull-right" %></p>
    </div>
  </div>
  <p class="pull-right"><%= link_to "トップへ戻る", :back %></p>
</div>

</div>