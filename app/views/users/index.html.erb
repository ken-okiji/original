  <div class="row">

    <%= render 'users/shared/mypage_sidemenu' %>
    
    <div class="col-md-8">
      <div class="row">
        <h1 class="balloon-1-bottom">友達検索</h1>
        
        <div class="panel panel-default">
        <div class="panel-heading"></span>条件検索</div>
          <div class="panel-body">
                     
            <%# form_for の代わりに search_form_for を使うことで検索フォームを作成 %>
            <%= search_form_for @q do |f| %>
                     
            <%# cont 文字列が含まれる商品説明で検索 %>
            <%= f.label :username_cont, "お名前" %>
            <%= f.search_field :username_cont %>
            <br />
          
            <%# cont 文字列が含まれる商品説明で検索 %>
            <%= f.label :area_cont, "地域" %>
            <%= f.search_field :area_cont %>
            <br />
            
            <%# 検索ボタン %>
            <%= f.submit %>
            <% end %>
          </div>
        </div>
        
        <table class="table table-bordered table-striped">
          <tr class="info">
            <th>お名前</th>
          </tr>
        
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
          </tr>
        <% end %>
        </table>
      </div>
    </div>
  </div>